      <OnLoad>
        this:SetBackdropColor(0.929, 0.42, 1, 0.9)
        this:SetBackdropBorderColor(0.929, 0.42, 1, 8)
      </OnLoad>
      <OnMouseUp>
        if ( this.isMoving ) then
          this:StopMovingOrSizing()
          this.isMoving = false
        end
      </OnMouseUp>
      <OnMouseDown>
        if ( ( not this.isLocked ) or ( this.isLocked == 0 ) ) and ( arg1 == "LeftButton" ) then
          this:StartMoving()
          this.isMoving = true
        end
      </OnMouseDown>
    </Scripts>
